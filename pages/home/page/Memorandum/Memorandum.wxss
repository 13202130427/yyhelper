.container{
  background-color: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /*text-align: center;*/
}
.additem{
  width: 100%;
}
.add{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  padding: 20rpx;
}
.plus{
  width: 61rpx;
  height: 41rpx;
  padding-right: 20rpx;
}
.InputAdd{
  padding-left: 20rpx;
  font-size: 28rpx;
}

.today{
  font-size: 10px;
  text-align: center;
}
.box{
  width: 100%;
}
.sec-box{
  font-size: 15px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
  margin: 2px;
}
.today-box{
  display: block;
  height: 100rpx;
  width: 100%;
  background-color: #00a2ea;
  border: 10rpx solid white;
  border-radius: 20rpx;
  position: relative;

}
.info{
  position: absolute;
  top:10rpx;
  left: 20rpx;
  width: 85%;
}
.today-close{
  position: absolute;
  top:20rpx;
  right: 10rpx;
  cursor: pointer;
}
.itemdescriptiont{
  float: left;
  flex: 1;
  font-size: 40rpx;
  color: white;
  width: 85%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.itemdescriptiontcompleted{
  float: left;
  flex: 1;
  text-decoration: line-through;
  font-size: 40rpx;
  color: white;
  width: 85%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-close{
  position: relative;
  right:0rpx;
  top:0rpx;
}
.itemcheckbox{
  float: left;
  width: 15%;
}