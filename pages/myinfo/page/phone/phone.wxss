page{
  background-color: #f1f1f1;
}
.main{

}
.icons{
  text-align: center;
}
.info{
  text-align: center;
}
.info .con{
  font-weight: bold;
  font-size: 35rpx;
}
.info .btn{
  display: block;
  width: 80%;
  margin-left: 10%;
  margin-top: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  background-color: #1296db;
  color: #fff;
  font-weight: bold;
}
.phoneedit{
  position: fixed;
  top: 0;
  z-index: 99;
  display: block;
  width: 100%;
  height: 600px;
  background: rgba(0, 0, 0, 0.356)
}
.phoneedit .box{
  position: fixed;
  top: 150px;
  left: 10%;
  z-index: 999;
  display: block;
  width: 80%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.phoneedit .box .txt{
  display: block;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
}
.phoneedit .box .txt .title{
  color: #969696;
  float: left;
  width: 65%;
  font-size: 28rpx;
}
.phoneedit .box .txt .getcode{
  float: left;
  width: 35%;
}
.phoneedit .box .error{
  display: block;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  color: red
}
.phoneedit .box .input{
  display: block;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 3rpx blue solid;
}
.phoneedit .box .btn{
  display: inline-block;
  width: 90%;
  margin-left: 5%;
  height: 60rpx;
  position: relative;
}
.btn .hover{
  color: #1296db
}
.btn .close{
  position: absolute;
  left: 50%;
  display: inline-block;
  width: 25%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #1296db
}
.btn .sure{
  position: absolute;
  left: 75%;
  display: inline-block;
  width: 25%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #d8d8d8
}