.info{
  padding: 20rpx;
  text-align: center;
}
.video{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 10rpx #f1f1f1 solid;
  background-color: #1296db;
  text-align: center;
  color: #fff;
  font-weight: bold;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.videobox{
  position: relative;
  display: block;
  width: 40%;
  margin-left: 5%;
  height: 220rpx;
  float: left;
}
.videomode{
  display: block;
  width: 100%;
  height: 210rpx;
  text-align: center;
}
.speed{
  position: absolute;
  top: 200rpx;
  height: 10rpx;
  background-color: #1296db;
}
.close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.left-top{
  position: absolute;
  top: 70rpx;
  left: 0rpx;
}
.right-down{
  position: absolute;
  top: 70rpx;
  right: 0rpx;
}